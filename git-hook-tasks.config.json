{
  "packageManager": "npm",
  "parallel": true,
  "hooks": {
    "pre-push": [
      {
        "name": "TypeScript",
        "script": "test:tsc"
      },
      {
        "name": "Lint",
        "script": "test:lint"
      },
      {
        "name": "Fmt",
        "script": "test:fmt"
      },
      {
        "mustRunAlone": true,
        "name": "Jest Tests",
        "script": "test:jest"
      }
    ]
  }
}
